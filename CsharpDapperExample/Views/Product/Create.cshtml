@model CsharpDapperExample.ViewModels.ProductViewModel
 
@{
    ViewData["Title"] = "New Product";
}
<h2>@ViewData["Title"]</h2>
 
<form asp-controller="Product" asp-action="Create">
    <div>
        <div class="form-group">
            <label asp-for="Product.Name"></label>
            <input type="text" asp-for="Product.Name" class="form-control form-control-sm"/>
        </div>
        <div class="form-group">
            <label asp-for="Product.Count"></label>
            <input asp-for="Product.Count" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Product.CategoryId"></label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                <option selected>-- Select Category --</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
 
<div>
    <a asp-controller="Product" asp-action="Index">Go Back</a>
</div>