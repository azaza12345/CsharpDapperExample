@model CsharpDapperExample.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "New Category";
}
<h2>@ViewData["Title"]</h2>
 
<form asp-controller="Category" asp-action="Create">
    <div>
        <div class="form-group">
            <label asp-for="Category.Name"></label>
            <input type="text" asp-for="Category.Name" class="form-control form-control-sm"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
 
<div>
    <a asp-controller="Category" asp-action="Index">Go Back</a>
</div>